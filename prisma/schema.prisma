generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Direction {
  id_direction     String    @id @default(uuid())
  code_direction   String    @unique
  nom_direction    String
  nom_directeur    String
  email_direction  String
  statut           String    @default("ACTIF")
  date_creation    DateTime  @default(now())
  nb_personnel     Int?      @default(0)
  business_email   String?
  business_phone   String?
  directeur_email  String?
  directeur_phone  String?
  motif_creation   String?
  nombre_bureau    String?
  nombre_service   String?
  numero_direction String?
  services         Service[]

  @@map("directions")
}

model Service {
  id_service       String      @id @default(uuid())
  code_service     String      @unique
  nom_service      String
  nb_personnel     Int?        @default(0)
  date_creation    DateTime    @default(now())
  id_direction     String
  id_chefdeservice String?     @default("a definir")
  demandes         Demande[]
  personnels       Personnel[]
  direction        Direction   @relation(fields: [id_direction], references: [id_direction])

  @@map("services")
}

model Personnel {
  id_personnel              String         @id @default(uuid())
  nom_personnel             String
  prenom_personnel          String
  email_personnel           String?        @unique
  email_travail             String?        @unique
  password                  String?
  date_naissance            DateTime?
  matricule_personnel       String?        @unique
  telephone_travail         String?
  telephone_personnel       String?
  ville_personnel           String?
  adresse_personnel         String?
  codepostal                String?
  pays_personnel            String?
  telephone_contact_urgence String?
  nom_contact_urgence       String?
  poste                     String?
  type_contrat              TypeContrat    @default(CDI)
  date_embauche             DateTime?
  date_fin_contrat          DateTime?
  salaire_base              Float?
  niveau_hierarchique       String?
  numero_cnps               String?
  banque_nom                String?
  banque_rib                String?
  statut_professionnel      StatutPersonnel @default(ACTIF)
  role_personnel            RolePersonnel  @default(EMPLOYE)
  type_personnel            TypePersonnel  @default(PERMANENT)
  date_creation             DateTime       @default(now())
  id_service                String
  is_active                 Boolean        @default(true)
  disponibilité_day        Int            @default(45)
  demandesEnCoursChef       Demande[]      @relation("ChefDemande")
  demandes                  Demande[]
  fichesConge               FicheDeConge[]
  notifications             Notification[]
  documents                 PersonnelDocument[]
  paies                     Paie[]
  contrats                  Contrat[]
  service                   Service        @relation(fields: [id_service], references: [id_service])

  @@map("personnels")
}

model TypeConge {
  id_typeconge      String         @id @default(uuid())
  libelle_typeconge String         @unique
  date_creation     DateTime       @default(now())
  is_active         Boolean        @default(true)
  periodesConge     PeriodeConge[]

  @@map("types_conge")
}

model PeriodeConge {
  id_periodeconge String    @id @default(uuid())
  date_debut      DateTime
  date_fin        DateTime
  nb_jour         Int
  id_typeconge    String
  demandes        Demande[]
  typeConge       TypeConge @relation(fields: [id_typeconge], references: [id_typeconge])

  @@map("periodes_conge")
}

model Demande {
  id_demande      String        @id @default(uuid())
  type_demande    String
  statut_demande  StatutDemande @default(EN_ATTENTE)
  date_demande    DateTime      @default(now())
  motif           String?
  id_personnel    String
  id_service      String?
  id_periodeconge String?
  id_chef_service String?
  chefService     Personnel?    @relation("ChefDemande", fields: [id_chef_service], references: [id_personnel])
  periodeConge    PeriodeConge? @relation(fields: [id_periodeconge], references: [id_periodeconge])
  personnel       Personnel     @relation(fields: [id_personnel], references: [id_personnel])
  service         Service?      @relation(fields: [id_service], references: [id_service])
  discussions     Discussion[]
  ficheDeConge    FicheDeConge?
  notifications   Notification[]

  @@map("demandes")
}

model Discussion {
  id_discussion  String   @id @default(uuid())
  message        String
  date_message   DateTime @default(now())
  heure_message  String?
  id_demande     String
  auteur_message  String   @default("inconnu")
  demande        Demande  @relation(fields: [id_demande], references: [id_demande])

  @@map("discussions")
}

model Contrat {
  id_contrat       String       @id @default(uuid())
  type_contrat     TypeContrat
  date_debut       DateTime
  date_fin         DateTime?
  salaire_reference Float?
  url_contrat      String?      // fichier PDF
  statut           String?      // Actif, Résilié, etc.

  id_personnel     String
  personnel        Personnel @relation(fields: [id_personnel], references: [id_personnel])

  date_creation    DateTime     @default(now())

  @@map("contrats")
}

model Paie {
  id_paie          String    @id @default(uuid())
  mois             Int
  annee            Int
  salaire_net      Float
  salaire_brut     Float
  primes           Float?
  deductions       Float?
  url_bulletin     String?   // fichier PDF du bulletin

  id_personnel     String
  personnel        Personnel @relation(fields: [id_personnel], references: [id_personnel])

  date_creation    DateTime  @default(now())

  @@map("paies")
}

model PersonnelDocument {
  id_document      String    @id @default(uuid())
  type_document    TypeDocument    // CNI, Contrat, Diplôme, Attestation, etc.
  url_document     String
  date_ajout       DateTime  @default(now())

  id_personnel     String
  personnel        Personnel @relation(fields: [id_personnel], references: [id_personnel])

  @@map("personnel_documents")
}

model FicheDeConge {
  id_ficheconge String    @id @default(uuid())
  message       String?
  date_message  DateTime  @default(now())
  heure_message String?
  id_demande    String    @unique
  id_personnel  String
  demande       Demande   @relation(fields: [id_demande], references: [id_demande])
  personnel     Personnel @relation(fields: [id_personnel], references: [id_personnel])

  @@map("fiches_conge")
}

model InteractionRh {
  id_interaction_rh String   @id @default(uuid())
  titre             String
  message           String
  date              DateTime @default(now())

  @@map("interactions_rh")
}

model Notification {
  id_notification  String    @id @default(uuid())
  titre            String
  message          String
  is_lu            Boolean   @default(false)
  date_creation    DateTime  @default(now())
  id_personnel     String
  id_demande       String?
  personnel        Personnel @relation(fields: [id_personnel], references: [id_personnel])
  demande          Demande?  @relation(fields: [id_demande], references: [id_demande])

  @@map("notifications")
}

enum StatutDemande {
  EN_ATTENTE
  APPROUVEE
  REFUSEE
  ANNULEE
  TERMINEE
}

enum RolePersonnel {
  ADMIN
  RH
  CHEF_SERVICE
  COMPTA_ADMIN
  EMPLOYE
}

enum TypePersonnel {
  PERMANENT
  CONTRACTUEL
  CONSULTANT
  TEMPORAIRE
  STAGIAIRE
}

enum TypeContrat {
  CDI
  CDD
  STAGE
  CONSULTANT
}

enum StatutPersonnel {
  ACTIF
  SUSPENDU
  EN_CONGE
  DEMISSIONNE
  LICENCIE
}

enum TypeDocument {
  CNI
  CONTRAT
  DIPLOME
  ATTestation
}